!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :name =>"authenticity-token", :id => "authenticity-token", :content => form_authenticity_token }/
    %title
      = APP_NAME
    %link{ :rel => "shortcut icon", :href => "/favicon.ico" }
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }/
    %meta{ :content => "IE=EmulateIE7", "http-equiv" => "X-UA-Compatible" }/
    %link{:rel => "stylesheet", :type => "text/css", :href => "http://yui.yahooapis.com/3.0.0/build/cssreset/reset-min.css"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "http://yui.yahooapis.com/3.0.0/build/cssbase/base-min.css"}
    = stylesheet_link_tag 'formtastic.css', 'formtastic_changes.css', 'main.css', 'smoothness/smoothness.css'
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js"
    = javascript_include_tag "http://ajax.microsoft.com/ajax/jquery.validate/1.5.5/jquery.validate.min.js"
    = javascript_include_tag "jquery.metadata", "jquery.form"
    = yield :head
  %body{:id => "#{controller.controller_name}-#{controller.action_name}"}
    #header
      = render :partial => "shared/header"
    #container
      = render :partial => "shared/flash", :locals => {:flash => flash}
      = yield
    #footer